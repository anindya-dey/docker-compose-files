NODE_ENV=production

# Local development URL
URL=http://localhost:3000

# The port to expose the Outline server on
PORT=3000

# How many processes should be spawned (1 is fine for local dev)
WEB_CONCURRENCY=1

# Generate a hex-encoded 32-byte random key. Use `openssl rand -hex 32` in your
# terminal to generate a random value.
SECRET_KEY=generate_a_new_key

# Generate a unique random key. The format is not important but you could still use
# `openssl rand -hex 32` in your terminal to generate a random value.
UTILS_SECRET=generate_a_new_key

# The default interface language
DEFAULT_LANGUAGE=en_US


# ––––––––––––––––––––––––––––––––––––––
# –––––––––––––  DATABASE  –––––––––––––
# ––––––––––––––––––––––––––––––––––––––

# Local PostgreSQL database connection
DATABASE_URL=postgres://user:pass@postgres:5432/outline

# Disable SSL for local development
PGSSLMODE=disable


# ––––––––––––––––––––––––––––––––––––––
# ––––––––––––––  REDIS  –––––––––––––––
# ––––––––––––––––––––––––––––––––––––––

# Local Redis connection
REDIS_URL=redis://redis:6379


# ––––––––––––––––––––––––––––––––––––––
# –––––––––––  FILE STORAGE  –––––––––––
# ––––––––––––––––––––––––––––––––––––––

# Use local file storage for development
FILE_STORAGE=local
FILE_STORAGE_LOCAL_ROOT_DIR=/var/lib/outline/data

# Maximum allowed size for uploads (250MB)
FILE_STORAGE_UPLOAD_MAX_SIZE=262144000


# ––––––––––––––––––––––––––––––––––––––
# ––––––––––––––––  SSL  –––––––––––––––
# ––––––––––––––––––––––––––––––––––––––

# Disable HTTPS redirect for local development
FORCE_HTTPS=false


# ––––––––––––––––––––––––––––––––––––––
# ––––––––––  AUTHENTICATION  ––––––––––
# ––––––––––––––––––––––––––––––––––––––

# IMPORTANT: You need to configure at least ONE authentication method below
# or you won't be able to sign in to Outline!

# Google sign-in provider (RECOMMENDED FOR LOCAL DEV)
# To set this up:
# 1. Go to https://console.developers.google.com/
# 2. Create a new project or select existing
# 3. Enable Google+ API
# 4. Create OAuth 2.0 credentials
# 5. Add http://localhost:3000/auth/google.callback to authorized redirect URIs
# 6. Uncomment and fill in the values below:
# GOOGLE_CLIENT_ID=your_google_client_id_here
# GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Alternative: Slack sign-in provider
# DOCS: https://docs.getoutline.com/s/hosting/doc/slack-sgMujR8J9J
# SLACK_CLIENT_ID=
# SLACK_CLIENT_SECRET=

# Alternative: Discord sign-in provider
# DOCS: https://docs.getoutline.com/s/hosting/doc/discord-g4JdWFFub6
# DISCORD_CLIENT_ID=
# DISCORD_CLIENT_SECRET=
# DISCORD_SERVER_ID=
# DISCORD_SERVER_ROLES=

# Alternative: Microsoft Entra / Azure AD sign-in provider
# DOCS: https://docs.getoutline.com/s/hosting/doc/microsoft-entra-UVz6jsIOcv
# AZURE_CLIENT_ID=
# AZURE_CLIENT_SECRET=
# AZURE_RESOURCE_APP_ID=


# ––––––––––––––––––––––––––––––––––––––
# ––––––––––––––  EMAIL  –––––––––––––––
# ––––––––––––––––––––––––––––––––––––––

# Email is optional for local development
# SMTP_SERVICE=
# SMTP_USERNAME=
# SMTP_PASSWORD=
# SMTP_FROM_EMAIL=


# ––––––––––––––––––––––––––––––––––––––
# ––––––––––  RATE LIMITER  ––––––––––––
# ––––––––––––––––––––––––––––––––––––––

# Disabled for local development to avoid hitting limits
RATE_LIMITER_ENABLED=false


# ––––––––––––––––––––––––––––––––––––––
# –––––––––––––  DEBUGGING  ––––––––––––
# ––––––––––––––––––––––––––––––––––––––

# Enable updates check
ENABLE_UPDATES=true

# Debug logging for local development
DEBUG=http
LOG_LEVEL=debug
